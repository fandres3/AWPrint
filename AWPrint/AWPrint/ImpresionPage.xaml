<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AWPrint.ImpresionPage"
             Title="Albarán">
    <ContentPage.Content>

        <StackLayout x:Name="outerStack" Margin="5,40,5,5" VerticalOptions="CenterAndExpand" 
                     HorizontalOptions="Center">
                <Image Source="FRESCOFRIO_AZUL.png"/>
                <Button x:Name="btnDescargar" Margin="5,25" Text="Descargar"
                    Clicked="BtnDescargarClicked" BackgroundColor="WhiteSmoke" Image="ic_launcher.png"/>
            <Button Margin="5,15" Text="Imprimir albarán"
                    Clicked="BtnImprimirClicked" BackgroundColor="WhiteSmoke" Image="ic_launcher.png"/>

            <StackLayout Margin="0,0,0,0"  VerticalOptions="EndAndExpand"
                    HorizontalOptions="FillAndExpand" >
                <Label x:Name="lblStatus" Text=""
                    FontSize="Medium"
                   
                    TextColor="White"/>
            </StackLayout>
                
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
    