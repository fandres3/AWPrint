<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AWPrint.ImpresionPage"
             Title="Albarán">
    <ContentPage.Content>

        <StackLayout Margin="5,40,5,5" VerticalOptions="Start" HorizontalOptions="Center">
                <Image Source="FRESCOFRIO_AZUL.png"/>
                <Button Margin="5,30" Text="Imprimir albarán"
                    Clicked="BtnImprimirClicked" BackgroundColor="WhiteSmoke" Image="ic_launcher.png"/>
            <StackLayout Margin="0,0,0,0">
                <Label x:Name="lblStatus" Text=""
                    FontSize="Medium"
                    VerticalOptions="EndAndExpand"
                    HorizontalOptions="Fill" 
                    TextColor="White"/>
            </StackLayout>
                
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
    