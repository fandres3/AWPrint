<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AWPrint.Page2"
             Title="Ajustes">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ubicación del fichero" FontSize="Medium"/>
            <Entry x:Name="txtCaminoAFichero" 
                   Text="Ubicación del fichero" 
                   Placeholder="Indique ubicación"
                   Completed="On_Completed"
                    FontSize="Medium"
                  />
            <Label Text="Fichero" FontSize="Medium"/>
            <Entry x:Name="txtFichero" 
                   Text="Nombre del fichero a imprimir" 
                   Placeholder="Nombre"
                   Completed="On_Completed"
                     FontSize="Medium"
                  />
            <Label Text="Nombre impresora BT" FontSize="Medium"/>
            <Entry x:Name="txtImpresora" 
                   Text="Nombre impresora Bluetooth" 
                   Placeholder="Nombre impresora Bluetooth"
                   Completed="On_Completed"
                     FontSize="Medium"
                  />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>